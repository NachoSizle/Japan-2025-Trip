---
import DayCard from './DayCard.tsx';
import type { Props as DayCardProps } from './DayCard.tsx';

export interface Props extends DayCardProps {
  isCurrentDay?: boolean;
}

const { day, fecha, titulo, ciudad, actividades, isCurrentDay } = Astro.props;
---

<a href={`${import.meta.env.BASE_URL}itinerario/${day}`} class="block group">
  <!-- Tarjeta centrada -->
  <div class="w-full max-w-lg mx-auto">
    <DayCard 
      client:visible
      day={day}
      fecha={fecha}
      titulo={titulo}
      ciudad={ciudad}
      actividades={actividades}
    />
    <!-- Indicador de que es clickeable -->
    <div class="mt-2 transition-colors duration-300 text-center">
      <span class="text-xs clickable-hint">
        ðŸ‘† Toca para ver detalles completos
        {isCurrentDay && <span class="ml-2 text-yellow-400 font-bold">Â¡HOY!</span>}
      </span>
    </div>
  </div>
</a>