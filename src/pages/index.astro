<style>
	/* === TEMA ROSA JAPON√âS === */
	
	/* Background del hero */
	.hero-bg {
		background: linear-gradient(135deg, #0A0A0A 0%, #1A1A1A 50%, #0A0A0A 100%);
	}
	
	/* T√≠tulo japon√©s */
	.hero-kanji {
		background: linear-gradient(45deg, #FF1493, #FF0040, #FF6B6B);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		text-shadow: 0 0 30px rgba(255, 20, 147, 0.5);
	}
	
	/* Textos del hero */
	.hero-text-1 { color: #FF1493; }
	.hero-text-2 { color: #FF6B6B; }
	.hero-text-3 { color: #FF0040; }
	
	.hero-subtitle { 
		color: #CCCCCC; 
	}
	
	.hero-gluten-free { 
		color: #32CD32; 
	}
	
	.hero-description { 
		color: #CCCCCC; 
	}
	
	.hero-highlight { 
		color: #FF1493;
		text-shadow: 0 0 10px rgba(255, 20, 147, 0.6);
	}
	
	/* Badges */
	.hero-badge {
		padding: 0.5rem 1rem;
		border-radius: 9999px;
		backdrop-filter: blur(10px);
		transition: all 0.3s ease;
	}
	
	.hero-badge-1 {
		background: rgba(255, 20, 147, 0.1);
		border: 1px solid rgba(255, 20, 147, 0.3);
		color: #FF1493;
	}
	
	.hero-badge-2 {
		background: rgba(255, 107, 107, 0.1);
		border: 1px solid rgba(255, 107, 107, 0.3);
		color: #FF6B6B;
	}
	
	.hero-badge-3 {
		background: rgba(50, 205, 50, 0.1);
		border: 1px solid rgba(50, 205, 50, 0.3);
		color: #32CD32;
	}
	
	.hero-badge:hover {
		transform: translateY(-2px);
		box-shadow: 0 5px 15px rgba(255, 20, 147, 0.3);
	}
	
	/* CTA Buttons */
	.cta-primary {
		background: linear-gradient(45deg, #FF1493, #FF6B6B);
		color: #FFFFFF;
		box-shadow: 0 4px 15px rgba(255, 20, 147, 0.3);
	}
	
	.cta-primary:hover {
		box-shadow: 0 6px 25px rgba(255, 20, 147, 0.5);
	}
	
	.cta-secondary {
		background: transparent;
		color: #32CD32;
		border: 2px solid #32CD32;
		box-shadow: 0 4px 15px rgba(50, 205, 50, 0.3);
	}
	
	.cta-secondary:hover {
		background: #32CD32;
		color: #000000;
		box-shadow: 0 6px 25px rgba(50, 205, 50, 0.5);
	}
	
	/* Stats */
	.stats-container {
		background: rgba(26, 26, 26, 0.8);
		border: 1px solid rgba(255, 20, 147, 0.3);
	}
	
	.stat-number {
		color: #FF1493;
		text-shadow: 0 0 10px rgba(255, 20, 147, 0.6);
	}
	
	.stat-label {
		color: #AAAAAA;
	}
	
	.stat-gluten {
		color: #32CD32;
		text-shadow: 0 0 10px rgba(50, 205, 50, 0.6);
	}
	
	/* === MODO CLARO === */
	[data-theme="light"] .hero-bg {
		background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 50%, #f8f9fa 100%);
	}
	
	[data-theme="light"] .hero-subtitle,
	[data-theme="light"] .hero-description {
		color: #495057;
	}
	
	[data-theme="light"] .hero-badge-1 {
		background: rgba(255, 20, 147, 0.05);
		border-color: rgba(255, 20, 147, 0.2);
	}
	
	[data-theme="light"] .hero-badge-2 {
		background: rgba(255, 107, 107, 0.05);
		border-color: rgba(255, 107, 107, 0.2);
	}
	
	[data-theme="light"] .hero-badge-3 {
		background: rgba(50, 205, 50, 0.05);
		border-color: rgba(50, 205, 50, 0.2);
	}
	
	[data-theme="light"] .stats-container {
		background: rgba(255, 255, 255, 0.8);
		border-color: rgba(255, 20, 147, 0.2);
	}
	
	[data-theme="light"] .stat-label {
		color: #666666;
	}
	
	/* === ESTILOS ADICIONALES MODO CLARO === */
	[data-theme="light"] .hero-title {
		background: linear-gradient(45deg, #FF1493, #FF6B6B) !important;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	
	[data-theme="light"] .hero-text-1 { color: #FF1493 !important; }
	[data-theme="light"] .hero-text-2 { color: #FF6B6B !important; }
	[data-theme="light"] .hero-text-3 { color: #FF0040 !important; }
	[data-theme="light"] .hero-gluten-free { color: #32CD32 !important; }
	[data-theme="light"] .hero-highlight { 
		color: #FF1493 !important;
		text-shadow: 0 0 10px rgba(255, 20, 147, 0.6) !important;
	}
	
	[data-theme="light"] .cta-primary {
		background: linear-gradient(45deg, #FF1493, #FF6B6B) !important;
		color: #FFFFFF !important;
	}
	
	[data-theme="light"] .cta-secondary {
		background: transparent !important;
		color: #32CD32 !important;
		border: 2px solid #32CD32 !important;
	}
	
	[data-theme="light"] .stat-number {
		color: #FF1493 !important;
	}
	
	[data-theme="light"] .stat-gluten {
		color: #32CD32 !important;
		text-shadow: 0 0 10px rgba(50, 205, 50, 0.6) !important;
	}
	
	[data-theme="light"] .preview-section {
		background: rgba(255, 255, 255, 0.8) !important;
	}
	
	[data-theme="light"] .preview-title {
		background: linear-gradient(45deg, #FF1493, #FF6B6B) !important;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	
	[data-theme="light"] .preview-text {
		color: #495057 !important;
	}
	
	/* Scroll indicator */
	.scroll-indicator {
		border-color: #FF1493;
		box-shadow: 0 0 15px rgba(255, 20, 147, 0.4);
	}
	
	.scroll-dot {
		background: #FF1493;
		box-shadow: 0 0 10px rgba(255, 20, 147, 0.6);
	}
	
	/* Preview section */
	.preview-section {
		background: rgba(26, 26, 26, 0.5);
		backdrop-filter: blur(10px);
	}
	
	.preview-title {
		background: linear-gradient(45deg, #FF1493, #FF6B6B);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	
	.preview-text {
		color: #CCCCCC;
	}
	
	/* Light mode - scroll indicator */
	:global(.light) .scroll-indicator {
		border-color: #FF1493;
		background: rgba(255, 255, 255, 0.8);
	}
	
	/* Light mode - preview section */
	:global(.light) .preview-section {
		background: rgba(255, 255, 255, 0.5);
	}
	
	:global(.light) .preview-text {
		color: #495057;
	}
	
	/* Part√≠culas flotantes */
	.particle {
		position: absolute;
		border-radius: 50%;
		pointer-events: none;
		animation: float 6s ease-in-out infinite;
	}
	
	.particle-1 {
		width: 4px;
		height: 4px;
		top: 20%;
		left: 10%;
		animation-delay: 0s;
		background: radial-gradient(circle, rgba(255, 20, 147, 0.8) 0%, transparent 70%);
	}
	
	.particle-2 {
		width: 6px;
		height: 6px;
		top: 50%;
		right: 15%;
		animation-delay: 2s;
		background: radial-gradient(circle, rgba(255, 107, 107, 0.8) 0%, transparent 70%);
	}
	
	.particle-3 {
		width: 3px;
		height: 3px;
		bottom: 30%;
		left: 20%;
		animation-delay: 4s;
		background: radial-gradient(circle, rgba(255, 0, 64, 0.8) 0%, transparent 70%);
	}
	
	.particle-4 {
		width: 5px;
		height: 5px;
		top: 70%;
		right: 25%;
		animation-delay: 1s;
		background: radial-gradient(circle, rgba(50, 205, 50, 0.6) 0%, transparent 70%);
	}
	
	.particle-5 {
		width: 4px;
		height: 4px;
		bottom: 20%;
		left: 70%;
		animation-delay: 3s;
		background: radial-gradient(circle, rgba(255, 215, 0, 0.6) 0%, transparent 70%);
	}
	
	/* Part√≠culas en modo claro */
	:global(.light) .particle-1,
	:global(.light) .particle-2,
	:global(.light) .particle-3 {
		opacity: 0.3;
	}
	
	@keyframes float {
		0%, 100% {
			transform: translateY(0px) rotate(0deg);
			opacity: 0.7;
		}
		50% {
			transform: translateY(-20px) rotate(180deg);
			opacity: 1;
		}
	}
	
	/* Smooth scroll */
	html {
		scroll-behavior: smooth;
	}
</style>
