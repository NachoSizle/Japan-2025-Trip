</style>

<script>
	// Script para manejar los colores del tema
	function updateThemeColors() {
		const theme = document.documentElement.getAttribute('data-theme');
		const heroDescription = document.querySelector('.hero-description-dark') as HTMLElement;
		const heroSubtitle = document.querySelector('.hero-subtitle-dark') as HTMLElement;
		
		if (heroDescription) {
			if (theme === 'light') {
				heroDescription.style.color = '#000000';
				heroDescription.style.fontWeight = '900';
			} else {
				heroDescription.style.color = '#CCCCCC';
				heroDescription.style.fontWeight = 'normal';
			}
		}
		
		if (heroSubtitle) {
			if (theme === 'light') {
				heroSubtitle.style.color = '#000000';
				heroSubtitle.style.fontWeight = '700';
			} else {
				heroSubtitle.style.color = '#CCCCCC';
				heroSubtitle.style.fontWeight = '300';
			}
		}
	}

	// Ejecutar al cargar la p√°gina
	document.addEventListener('DOMContentLoaded', () => {
		updateThemeColors();
	});
	
	// Observar cambios en el atributo data-theme
	const observer = new MutationObserver(function(mutations) {
		mutations.forEach(function(mutation) {
			if (mutation.type === 'attributes' && mutation.attributeName === 'data-theme') {
				updateThemeColors();
			}
		});
	});
	
	observer.observe(document.documentElement, {
		attributes: true,
		attributeFilter: ['data-theme']
	});
</script>
